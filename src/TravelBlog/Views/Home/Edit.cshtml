@model TravelBlog.Models.Experience
@{
    ViewData["Title"] = "Experience - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit this experience: " @Html.DisplayFor(model => model.Description) ". Memory changes should take effect within two years.</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ExperienceId)

    @Html.LabelFor(model => model.Date)
    @Html.EditorFor(model => model.Date)

    @Html.LabelFor(model => model.Description)
    @Html.EditorFor(model => model.Description)

    @Html.LabelFor(model => model.LocationId)
    @Html.DropDownList("LocationId")

    @Html.LabelFor(model => model.PersonId)
    @Html.DropDownList("PersonId")

    <input type="submit" value="Save" class="btn btn-default" />
}

@Html.ActionLink("Back to List", "Index")