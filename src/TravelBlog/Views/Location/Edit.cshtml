@model TravelBlog.Models.Location
@{
    ViewData["Title"] = "Location - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Can you *really* edit a planet? Especially @Html.DisplayFor(model => model.Planet)?</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.LocationId)

    @Html.LabelFor(model => model.Planet)
    @Html.EditorFor(model => model.Planet)

    @Html.LabelFor(model => model.Biome)
    @Html.EditorFor(model => model.Biome)

    @Html.LabelFor(model => model.GalacticRegion)
    @Html.EditorFor(model => model.GalacticRegion)

    <input type="submit" value="Save" class="btn btn-primary" />
}

@Html.ActionLink("Back to List", "Index")