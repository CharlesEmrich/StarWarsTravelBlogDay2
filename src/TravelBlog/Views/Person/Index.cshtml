@model IEnumerable<TravelBlog.Models.Person>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Travel Blog</h2>
<hr />
<p>
    @Html.ActionLink("Add New Person", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Species)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Affiliation)
        </th>
        <th></th>
    </tr>

    @foreach (var per in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => per.Name) --
            </td>
            <td>
                @Html.DisplayFor(model => per.Species) --
            </td>
            <td>
                @Html.DisplayFor(model => per.Affiliation) --
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = per.PersonId })
                @Html.ActionLink("Details", "Details", new { id = per.PersonId })
                @Html.ActionLink("Delete", "Delete", new { id = per.PersonId })
            </td>
        </tr>

    }
</table>
